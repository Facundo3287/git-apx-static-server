    "compilerOptions": {
      "target": "es5",                          
      "module": "commonjs",                    
      "strict": true,                          
      "esModuleInterop": true,                 
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": [
      "./index.ts",
      "./db.ts"                              
    ],
    "exclude": [
      "node_modules",                        
      "src/**/*"
    ]
  }
  